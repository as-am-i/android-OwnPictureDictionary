<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/word_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Word Name"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/word_tag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/word_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Tag1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/word_name"
            app:layout_constraintTop_toBottomOf="@+id/word_name" />

        <TextView
            android:id="@+id/word_tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Tag2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/word_name"
            app:layout_constraintTop_toBottomOf="@+id/word_name"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>


</LinearLayout>